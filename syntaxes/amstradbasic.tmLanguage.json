{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "ABASC AMSTRAD-Basic",
    "patterns": [{
            "include": "#keywords"
        },
        {
            "include": "#strings"
        }
    ],
    "repository": {
        "keywords": {
            "patterns": [
                {
                    "name": "keyword.control.amstradbasic",
                    "match": "(?i:\\b(AFTER|ASM|AUTO|BORDER|BREAK|CALL|CASE|CAT|CHAIN MERGE|CHAIN|CLEAR|CLG|CLOSEIN|CLOSEOUT|CLS|CONST|CONT|DATA|DECLARE|DEF FN|DEFINT|DEFSTR|DEFREAL|DEG|DELETE|DI|DIM|DRAW|DRAWR|EDIT|EI|ELSE|END|ENT|ENV|ERASE|ERROR|EVERY|EXIT|FRAME|FOR|FUNCTION|GOSUB|GOTO|IF|INK|INPUT|KEY DEF|KEY|LABEL|LET|LINE INPUT|LIST|LOAD|LOCATE|MEMORY|MERGE|MODE|MOVE|MOVER|NEW|NEXT|ON|OUT|OPENIN|OPENOUT|ORIGIN|PAPER|PEN|PLOT|PLOTR|POKE|PRINT|SHARED|SPC|SUB|TAB|USING|RAD|RANDOMIZE|READ|RECORD|RELEASE|RENUM|RESTORE|RESUME|RETURN|RUN|SAVE|SELECT|SOUND|STEP|SPEED|SYMBOL|SWAP|TAG|TAGOFF|TRON|TROFF|THEN|TO|STEP|STOP|UNT|WAIT|WEND|WHILE|WIDTH|WINDOW|WRITE|ZONE)\\b(?!\\.))"
                },
                {
                    "name": "keyword.operator.logical.amstradbasic",
                    "match": "(?i:\\b(AND|NOT|OR|XOR|MOD)\\b)"
                },
                {
                    "name": "entity.name.function.amstradbasic",
                    "match": "(?i:\\b(ABS|ASC|ATN|BIN|CHR$|CINT|CREAL|COPYCHR$|COS|EOF|ERR|ERL|EXP|FIX|FRE|HIMEM|INKEY|INKEY|INP|INTRS|INT|JOY|LEFT|LEN|LOG10|LOG|LOWER|MIN|MAX|MID|PEEK|PI|POS|REMAIN|RIGHT|RND|ROUND|SIN|SQ|SQR|STR$|STRING$|SGN|TAN|TEST|TESTR|TIME|UPPER|VAL|XPOS|YPOS)\\b(?!\\.))"
                },
                {
                    "name": "comment.line.amstradbasic",
                    "match": "(?i:(\\bREM\\b|').*)"
                },
                {
                    "name": "variable.name.amstradbasic",
                    "match": "\\b[A-Za-z](\\$|\\!|\\%|[A-Za-z0-9\\.]*)"
                },
                {
                    "name": "comment.block.amstradbasic",
                    "begin": "/'",
                    "end": "'/"
                },
                {
                    "name": "constant.numeric.amstradbasic",
                    "match": "-?\\b((([0-9]+\\.?[0-9]*)|(\\.[0-9]+))((e|E)(\\+|-)?[0-9]+)?)(L|l|UL|ul|u|U|F|f)?|(\\$[a-zA-Z0-9]+)|(@[0|1]+)\\b"
                },
                {
                    "match": "&|\\*|\\-|\\+|=|<>|<|>|\\|\\^|<<|>>|~",
                    "name": "keyword.operator.arithmetic.amstradbasic"
                }
            ]
        },
        "strings": {
            "name": "string.quoted.double.amstradbasic",
            "begin": "\"",
            "end": "\"",
            "patterns": [{
                "name": "constant.character.escape.amstradbasic",
                "match": "\\\\."
            }]
        }
    },
    "scopeName": "source.abascbasic"
}